# Tell Berkshelf to use the cookbook found in the root directory
metadata

# Bring in "rightscale" cookbook
cookbook "rightscale", 
  github: "rightscale/rightscale_cookbooks", 
  rel: "cookbooks/rightscale"

# Bring in dependencies of the "rightscale" cookbook
cookbook "sys_firewall", 
  github: "rightscale/rightscale_cookbooks", 
  rel: "cookbooks/sys_firewall"
cookbook "sys", 
  github: "rightscale/rightscale_cookbooks", 
  rel: "cookbooks/sys"
cookbook "driveclient", 
  github: "rightscale/rackspace_cookbooks", 
  rel: "driveclient"
cookbook "cloudmonitoring", 
  github: "rightscale/rackspace_cookbooks", 
  rel: "cloudmonitoring"
cookbook "yum", 
  github: "rightscale/cookbooks", 
  rel: "yum"
cookbook "apt", 
  github: "rightscale/cookbooks", 
  rel: "apt"
cookbook "iptables", 
